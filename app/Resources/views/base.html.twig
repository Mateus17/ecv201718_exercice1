<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('/css/bootstrap.min.css') }}">
    </head>
    <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <ul class="navbar-nav">
            <li class="nav-item {% block pagePays %}{% endblock %}">
              <a class="nav-link" href="{{ path('pays_list') }}">{{ 'pays.title'|trans }}</a>
            </li>
            <li class="nav-item {% block pageDiscipline %}{% endblock %}">
              <a class="nav-link" href="{{ path('discipline_list') }}">{{ 'discipline.title'|trans }}</a>
            </li>
            <li class="nav-item {% block pageAthlete %}{% endblock %}">
              <a class="nav-link" href="{{ path('athlete_list') }}">{{ 'athlete.title'|trans }}</a>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container">

        {% for flashMessage in app.session.flashbag.get('success') %}
          <div class="alert alert-success">
            {{ flashMessage|trans }}
          </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
          <div class="alert alert-danger">
            {{ flashMessage|trans }}
          </div>
        {% endfor %}

        {% block body %}{% endblock %}

        <script src="{{ asset('/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
      </div>
    </body>
</html>
